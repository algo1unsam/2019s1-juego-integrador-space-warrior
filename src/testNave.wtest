	test "Nave recibe disparo cuando vida = 0 y nivel = 1"{
		
		nave.vida(0)	
		nave.recibeDisparo()
		
		assert.notThat(nave.vida()== -5)
	}
	
	
	test "Method matarEnemigo nivel 1 muertes 6"{
		
		nave.muertes(6)	
		nave.matarEnemigo()
		
		assert.equals(6, nave.muertes())

	}
	
	
	
	
	
	

