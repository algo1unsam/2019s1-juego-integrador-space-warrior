describe "Test de la nave" {	

	test "Valor de vida segÃºn nivel" {
		
		nave.subirNivel()
		assert.equals(25, nave.vida())
	}
	
	test "Nave recibe disparo cuando vida > 0 y nivel es 1"{
		
		nave.recibeDisparo()
